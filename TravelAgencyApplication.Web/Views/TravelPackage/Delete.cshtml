@model TravelAgencyApplication.Domain.Model.TravelPackage

@{
    ViewData["Title"] = "Delete Travel Package";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this package?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.Details</dd>
        <dt class="col-sm-2">Base Price</dt>
        <dd class="col-sm-10">@Model.BasePrice</dd>
        <dt class="col-sm-2">Departure Date</dt>
        <dd class="col-sm-10">@Model.DepartureDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Return Date</dt>
        <dd class="col-sm-10">@Model.ReturnDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Destination</dt>
        <dd class="col-sm-10">@Model.Destination</dd>
        <dt class="col-sm-2">Max Capacity</dt>
        <dd class="col-sm-10">@Model.MaxCapacity</dd>
        <dt class="col-sm-2">Current Capacity</dt>
        <dd class="col-sm-10">@Model.CurrentCapacity</dd>
        <dt class="col-sm-2">Season</dt>
        <dd class="col-sm-10">@Model.Season</dd>
        <dt class="col-sm-2">Transport Type</dt>
        <dd class="col-sm-10">@Model.TransportType</dd>
    </dl>
</div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="AdminIndex" class="btn btn-secondary">Cancel</a>
</form>
</div>
